extends layout

block style
	// codemirror.css must come first; I overwrite some properties.
	link(rel='stylesheet', href='/style/exercise.css')

block content
	div#buttons
		button#checkButton(title='Check Proof')
			i(class='fa fa-check')
		button#hintButton(title='Hint')
			i(class='fa fa-puzzle-piece')
		button#bragButton(title='Brag')
			i(class='fa fa-envelope')
		a(href='..')
			button#homeButton(title='About')
				i(class='fa fa-home')

	div#brag.textBubble.hid
		div#bragSuccess.hid.
			Success!
		div#bragFail.hid
		form#bragForm
			div.title Brag
			div.formTitle Your Name
			div
				input#userName(type='text')
			div.formTitle Your Email
			div
				input#emailFrom(type='text')
			div.formTitle Email To
			div
				input#emailTo(type='text')
			div.formTitle Comment
			div
				textarea#comment(rows=8)
			div
				input#bragSubmit(type='submit' value='Send')

	div#checkResultContainer.hid
		div#checkSuccess.textBubble
			div.
				Valid proof!
			a#nextExercise
				span= 'Next: Exercise '
				span#nextExerciseNumber
				// i(class = 'fa fa-forward')

		div#checkFail.textBubble

	div#hint.textBubble.hid
		div#hintTitle.title Hint
		div#hintText.md

	div#code.hid
		div#setup
		div#editor
		div#finish

	div#explain.textBubble
		div.title#exerciseTitle
		div#explainText.md
		div#startProof.
			Let's deduce!
