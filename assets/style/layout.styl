@require 'font'

clickable()

centered()
	margin-left auto
	margin-right auto

padding-x(amount)
	padding-left amount
	padding-right amount

margin-x(amount)
	margin-left amount
	margin-right amount

margin-y(amount)
	margin-top amount
	margin-bottom amount

border-radius-top(amount)
	border-top-left-radius amount
	border-top-right-radius amount

border-radius-bottom(amount)
	border-bottom-left-radius amount
	border-bottom-right-radius amount

grad-bg(color-a, color-b, angle=to bottom right)
	background linear-gradient(angle, color-a, color-b)


.textBubble
	centered()
	border-radius 40px
	margin-y 20px
	padding 20px
	width 480px

.title
	font-title()
	margin-bottom 12px
	font-size 28px
	text-align center

html
	height 100%

body
	font-dense-text()
	grad-bg #aaa, #eee, -45deg
	background-repeat no-repeat
	background-attachment fixed
	margin 0
	height 100%

#cover
	position fixed
	height 100%
	width 100%
	top 0
	left 0
	background white
	z-index 99



#buttons
	centered()
	border-radius 20px
	padding 2px
	grad-bg #ccc, #888
	text-align center

#buttons button
	margin-x 4px
	padding-x 2px
	width 36px
	border-radius 12px
	border-style none
	font-size 24px
	background-color white
#buttons button:hover
	background-color yellow
#checkButton
	color forestGreen
#hintButton
	color orange
#bragButton
	color mediumOrchid
#loadButton
	color magenta
#saveButton
	color maroon
#homeButton
	color black
#homeButton:hover
	cursor pointer



.cm-bad-whitespace
	border-style solid
	border-color black
	border-width 1px

